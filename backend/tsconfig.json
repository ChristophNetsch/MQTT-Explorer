{
  "compileOnSave": true,
  "compilerOptions": {
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "outDir": "./build",
    "strict": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "sourceMap": true
  },
  "includes": [
    "src/**/*.ts"
  ],
  "exclude": [
    "app",
    "node_modules",
    "src/**/*.spec.ts",
    "**/*.d.ts",
    "typings"
  ]
}